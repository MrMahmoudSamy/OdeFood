@page
@model OdeFood.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" placeholder="Search" asp-for="SearchTerm" />
            <div class="input-group-append">
                <button class="btn btn-light" >
                    <i class="fa fa-search fa-fw"></i>
                </button>
            </div>
        </div>
    </div>
</form>


<table class="table">
    <caption>List of Restaurants</caption>
    <thead>
        <tr>
            <th scope="col">Restaurant</th>
            <th scope="col">Location</th>
            <th scope="col">Cuisine</th>
            <th scope="col" colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach(var rest in Model.restaurant)
                {
        <tr>
            <td>@rest.Name</td>
            <td>@rest.Location</td>
            <td>@rest.Cuisine</td>
           
            <td>
                <a class="btn btn-lg" asp-page="./Details"
                   asp-route-restaurantId="@rest.Id">
                    <i class="fa fa-folder-open"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg" asp-page="./Edit"
                   asp-route-restaurantId="@rest.Id">
                    <i class="fa fa-edit"></i>
                </a>
            </td>
        </tr>
                }


    </tbody>



</table>