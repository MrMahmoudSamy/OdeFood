@page
@model OdeFood.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" placeholder="Search" asp-for="SearchTerm" />
            <div class="input-group-append">
                <button class="btn btn-light">
                    <i class="fa fa-search fa-fw"></i>
                </button>
            </div>
        </div>
    </div>
</form>
<div class="form-group">
    <div class="input-group">
        <a asp-page="./Edit" class="btn btn-primary">New Restaurant</a>
       
    </div>
</div>
<table class="table" border="0" cellpadding="0" cellspacing="0">
    <caption>List of Restaurants</caption>
    <thead>
        <tr>
            <th scope="col">Restaurant</th>
            <th scope="col">Location</th>
            <th scope="col">Cuisine</th>
            <th scope="col" colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var rest in Model.restaurant)
        {
        <tr>
            <td>@rest.Name</td>
            <td>@rest.Location</td>
            <td>@rest.Cuisine</td>

            <td>
                <a class="btn btn-md" asp-page="./Details"
                   asp-route-restaurantId="@rest.Id">
                    <i class="fa fa-folder-open"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-md" asp-page="./Edit"
                   asp-route-restaurantId="@rest.Id">
                    <i class="fa fa-edit"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-md" asp-page="./Delete"
                   asp-route-restaurantId="@rest.Id">
                    <i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
        }


    </tbody>



</table>